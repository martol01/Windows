<Page
    x:Class="NumbugsRBS.SplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NumbugsRBS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/menu_background.png"
                    Stretch="UniformToFill" />
        </Grid.Background>
        <Image x:Name="image_game_logo" HorizontalAlignment="Left" Height="271" Margin="192,10,0,0" VerticalAlignment="Top" Width="898" Source="Assets/Logo.png" Stretch="UniformToFill"/>
        <Image x:Name="image_rbs_logo" HorizontalAlignment="Left" Height="295" Margin="629,473,0,0" VerticalAlignment="Top" Width="530" Source="Assets/rbs_logo.png"/>
        <Image x:Name="image_reading_quest_logo" HorizontalAlignment="Left" Height="259" Margin="138,448,0,0" VerticalAlignment="Top" Width="382" Source="Assets/logo_quest.png"/>
        <Rectangle Fill="#FF020206" HorizontalAlignment="Left" Height="58" Margin="389,341,0,0" Stroke="Black" VerticalAlignment="Top" Width="588"/>
        <TextBlock x:Name="tbBroughtBy" TextWrapping="Wrap" Text="Brought to you by" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="48" Margin="473,341,463,369" Foreground="#FFFFECBB" FontWeight="Bold" Width="430"/>

    </Grid>
</Page>